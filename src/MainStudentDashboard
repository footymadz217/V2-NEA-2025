import React, { useState } from 'react';
import './individual_references.css';
import './academia.css';
import './grades.css';
import './personal_statement.css';
import './profile.css';

const StudentDashboard = () => {
  const [activeScreen, setActiveScreen] = useState(null);

  const handleClickForStudent = () => {
    // Logic to open the student dashboards and screens
    setActiveScreen('individual_references'); // Default screen
  };

  const renderScreen = () => {
    switch (activeScreen) {
      case 'individual_references':
        return <IndividualReferences />;
      case 'academia':
        return <Academia />;
      case 'grades':
        return <Grades />;
      case 'personal_statement':
        return <PersonalStatement />;
      case 'profile':
        return <Profile />;
      default:
        return <div>Select a screen to view</div>;
    }
  };

  return (
    <div>
      <button onClick={handleClickForStudent}>Click me to open the Student Dashboards and Screens</button>
      <div>
        <button onClick={() => setActiveScreen('individual_references')}>Individual References</button>
        <button onClick={() => setActiveScreen('academia')}>Academia</button>
        <button onClick={() => setActiveScreen('grades')}>Grades</button>
        <button onClick={() => setActiveScreen('personal_statement')}>Personal Statement</button>
        <button onClick={() => setActiveScreen('profile')}>Profile</button>
      </div>
      <div>
        {renderScreen()}
      </div>
    </div>
  );
};

const IndividualReferences = () => {
  // Load the individual_references.js logic here
  return <div>Individual References Content</div>;
};

const Academia = () => {
  // Load the academia.js logic here
  return <div>Academia Content</div>;
};

const Grades = () => {
  // Load the grades.js logic here
  return <div>Grades Content</div>;
};

const PersonalStatement = () => {
  // Load the personal_statement.js logic here
  return <div>Personal Statement Content</div>;
};

const Profile = () => {
  // Load the profile.js logic here
  return <div>Profile Content</div>;
};

export default StudentDashboard;
